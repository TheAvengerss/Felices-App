                			<CompositeTransform Rotation="0.047"/>
                		</TextBlock.RenderTransform>
                	</TextBlock>
                	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Directions" VerticalAlignment="Top" Margin="-180,168,0,-110" Width="253" Height="42" FontSize="32"/>
                	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="-156,215,-71,-282" Width="327" Height="167" FontSize="22.667">
